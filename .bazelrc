# Specifies compilation with c++ version 17.
# build --action_env=BAZEL_CXXOPTS="-std=c++20" --enable_runfiles
build --enable_platform_specific_config
build:macos --cpu=darwin_arm64 --cxxopt=-std=c++20 --host_cxxopt=-std=c++20 --copt=-w --host_copt=-w
build:linux --cxxopt=-std=c++17 --host_cxxopt=-std=c++17 --copt=-Wno-error
build:windows --enable_runfiles --cxxopt=/std:c++20 --host_cxxopt=/std:c++20
# startup --output_user_root=C:/tmp
build --copt="-D_GLIBCXX_USE_CXX11_ABI=0"
build --host_copt="-D_GLIBCXX_USE_CXX11_ABI=0"
build:linux --copt="-Wl,--wrap=memcpy"
build:linux --linkopt="-Wl,--wrap=memcpy"
build:linux --copt="-D__GLIBC_MAX_VERSION__=2.35"